=form_for(@list, remote: true) do |f|
  =if @list.errors.any?
    %div{:id => "error_explanation"}
      %h2
        pluralize(@list.errors.count, "error") rohibited this list from being saved:
      %ul
        =@list.errors.full_messages.each do |msg|
          %li
            = msg
  %div{:class=>"field"}
    = f.text_field :work
  %div{:class=>"actions"}
    = f.submit "Crear"